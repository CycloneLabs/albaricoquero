{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",

    "strict": true,

    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",

    "paths": {
      "*": [
        "src/*"
      ]
    }
  },

  "exclude": [
    "node_modules"
  ]
}
